{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "$OIDC_IDENTITY_PROVIDER_ARN"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "${OIDC_DISCOVERY_PROVIDER_HOSTNAME}:aud": "$SPIFFE_AUDIENCE",
          "${OIDC_DISCOVERY_PROVIDER_HOSTNAME}:sub": "$SPIFFE_ID_WORKLOAD_APP"
        }
      }
    }
  ]
}